{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build current file with MSYS2",
      "type": "shell",
      "command": "C:/msys64/usr/bin/bash.exe",
      "args": [
        "-c",
        "/ucrt64/bin/g++ -std=c++17 -I/ucrt64/include -L/ucrt64/lib '${file}' -o '${fileDirname}/${fileBasenameNoExtension}.exe' -lcurl -lssl -lcrypto -lz -lws2_32 -lcrypt32 -lwinmm"
      ],
      "options": {
        "shell": {
          "executable": "C:/msys64/usr/bin/bash.exe"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build using MSYS2 shell and libcurl"
    }
  ]
}
